{
  "compilerOptions": {
    "lib": ["esnext", "WebWorker"],
    "checkJs": true,
    "module": "NodeNext",
    "target": "esnext",
    "types": ["jest"],
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "assumeChangesOnlyAffectDirectDependencies": true,
    "strict": true,
    "noImplicitAny": false,
    "rootDir": ".",
    "composite": true,
    "allowImportingTsExtensions": true
  },
  "include": ["src", "test"]
}
