{
  "id": "builtin.git",
  "name": "Git",
  "description": "Git SCM Integration",
  "browser": "src/gitMain.js",
  "icon": "./icon.png",
  "activation": [
    "onCommand:git.init",
    "onCommand:git.pull",
    "onCommand:git.pullRebase",
    "onCommand:git.push",
    "onCommand:git.addAll",
    "onCommand:git.sync",
    "onCommand:git.fetch",
    "onCommand:git.pr",
    "onCommand:git.stage",
    "onCommand:git.unstage",
    "onCommand:git.stageAll",
    "onCommand:git.unstageAll",
    "onCommand:git.cleanAll",
    "onCommand:git.discard",
    "onCommand:git.undoLastCommit",
    "onCommand:git.selectBranch",
    "onStartupFinished",
    "onSourceControl",
    "onSourceControl:",
    "onStatusBarItem"
  ],
  "commands": [
    {
      "id": "git.init",
      "label": "Git: Init"
    },
    {
      "id": "git.pull",
      "label": "Git: Pull"
    },
    {
      "id": "git.pullRebase",
      "label": "Git: Pull (Rebase)"
    },
    {
      "id": "git.push",
      "label": "Git: Push"
    },
    {
      "id": "git.addAll",
      "label": "Git: Add all"
    },
    {
      "id": "git.sync",
      "label": "Git: Sync"
    },
    {
      "id": "git.fetch",
      "label": "Git: Fetch"
    },
    {
      "id": "git.undoLastCommit",
      "label": "Git: Undo Last Commit"
    },
    {
      "id": "git.pr",
      "label": "Git: Create Pull Request",
      "aliases": ["pr"]
    },
    {
      "id": "git.checkoutRef",
      "label": "Git Checkout"
    }
  ],
  "quickPick": [
    {
      "id": "git.checkoutRef"
    }
  ],
  "configuration": {
    "git.path": {
      "type": "string"
    },
    "git.autoFetch": {
      "type": "boolean"
    },
    "git.autoFetchPeriod": {
      "type": "number",
      "default": 100
    }
  },
  "statusBarItems": [
    {
      "id": "git.checkout"
    },
    {
      "id": "git.sync"
    }
  ],
  "sourceControl": {
    "scheme": ""
  },
  "source-control-actions": {
    "index": [
      {
        "command": "git.unstageAll",
        "label": "Unstage All",
        "icon": "Remove"
      }
    ],
    "index-item": [
      {
        "command": "git.openFile",
        "label": "Open File",
        "icon": "GoToFile"
      },
      {
        "command": "git.unstage",
        "label": "Unstage Changes",
        "icon": "Remove"
      }
    ],
    "working-tree": [
      {
        "command": "git.discardAll",
        "label": "Discard All",
        "icon": "Discard"
      },
      {
        "command": "git.stageAll",
        "label": "Stage All",
        "icon": "Add"
      }
    ],
    "working-tree-item": [
      {
        "command": "git.openFile",
        "label": "Open File",
        "icon": "GoToFile"
      },
      {
        "command": "git.discard",
        "label": "Discard",
        "icon": "Discard"
      },
      {
        "command": "git.stage",
        "label": "Stage",
        "icon": "Add"
      }
    ]
  }
}
