{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "checkJs": false,
    "module": "NodeNext",
    "types": [],
    "moduleResolution": "NodeNext",
    "rootDir": ".",
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "assumeChangesOnlyAffectDirectDependencies": true,
    "strict": true,
    "noImplicitAny": false,
    "composite": true
  },
  "include": ["src", "test", "typings"]
}
