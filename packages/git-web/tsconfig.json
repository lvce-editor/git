{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "module": "NodeNext",
    "types": [],
    "moduleResolution": "NodeNext",
    "rootDir": ".",
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "assumeChangesOnlyAffectDirectDependencies": true,
    "strict": true,
    "noImplicitAny": false,
    "composite": true,
    "allowImportingTsExtensions": true
  },
  "include": ["src", "test"]
}
